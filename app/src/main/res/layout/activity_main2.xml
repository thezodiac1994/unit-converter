<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.the_blue_zodiac.metricunitconverter.Main2Activity">

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="KM TO MILES"
        android:id="@+id/km_milesbutton"
        android:layout_centerHorizontal="true"
        android:onClick="onkmml"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="MILES TO KM"
        android:id="@+id/miles_kmbutton"
        android:layout_below="@+id/km_milesbutton"
        android:layout_centerHorizontal="true"
        android:onClick="onmlkm"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="INCHES TO CM"
        android:id="@+id/inches_cmbutton"
        android:layout_below="@+id/miles_kmbutton"
        android:layout_centerHorizontal="true"
        android:onClick="onincm"

        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="CM TO INCHES"
        android:id="@+id/cm_inchesbutton"
        android:layout_below="@+id/inches_cmbutton"
        android:onClick="oncmin"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="M TO FEET"
        android:id="@+id/m_feetbutton"
        android:layout_below="@+id/cm_inchesbutton"
        android:onClick="onmfeet"
        android:layout_gravity="center_horizontal" />



    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="FEET TO M"
        android:id="@+id/feet_mbutton"
        android:layout_below="@+id/m_feetbutton"
        android:onClick="onfeetm"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
